<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dp_140"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_shape_round_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_speed1"
            style="@style/common_txt_16_33"
            android:drawablePadding="@dimen/common_dp_4"
            android:text="  0.8X " />

        <ImageView
            android:id="@+id/pw_speedi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:background="@color/common_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_speed2"
            style="@style/common_txt_16_33"
            android:drawablePadding="@dimen/common_dp_4"
            android:text="  1.0X " />

        <ImageView
            android:id="@+id/pw_speedi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:background="@color/common_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_speed3"
            style="@style/common_txt_16_33"
            android:drawablePadding="@dimen/common_dp_4"
            android:text="  1.2X " />

        <ImageView
            android:id="@+id/pw_speedi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>