<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dp_95"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_shape_round_gray"
    android:orientation="vertical">
    <!--    1 单篇 2顺序 3单句-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_sort1"
            style="@style/common_txt_14_33"

            android:text="单篇播放" />

        <ImageView
            android:id="@+id/pw_sorti1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_sort2"
            style="@style/common_txt_14_33"
            android:drawablePadding="@dimen/common_dp_4"
            android:text="顺序播放" />

        <ImageView
            android:id="@+id/pw_sorti2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp_1"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dp_12">

        <TextView
            android:id="@+id/pw_sort3"
            style="@style/common_txt_14_33"
            android:text="单句循环" />

        <ImageView
            android:id="@+id/pw_sorti3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_dp_6"
            android:src="@mipmap/audio_right"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>