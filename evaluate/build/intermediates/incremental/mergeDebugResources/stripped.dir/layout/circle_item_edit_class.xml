<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                       
                                                                

                 
                           
                             
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp" android:tag="layout/circle_item_edit_class_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/open_liner_bg_shape"
            android:singleLine="true"
            android:tag="binding_1"      />

        <ImageView
            android:id="@+id/circle_iv_drag"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/circle_move_icon"
            android:tag="binding_2"       />

        <TextView
            android:id="@+id/circle_tv_del"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/common_grey"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:tag="binding_3"       />
    </LinearLayout>

         