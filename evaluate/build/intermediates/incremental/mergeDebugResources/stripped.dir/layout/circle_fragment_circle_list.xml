<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                            
                                                            
           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" android:tag="layout/circle_fragment_circle_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <com.docker.common.common.widget.refresh.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:tag="binding_1"                              
                                                            
                                                                          
                                                                            >

            <com.docker.common.common.widget.empty.EmptyLayout
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="binding_2"                                 
                                                        >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            </com.docker.common.common.widget.empty.EmptyLayout>

        </com.docker.common.common.widget.refresh.SmartRefreshLayout>


        <com.docker.common.common.widget.empty.EmptyLayout
            android:id="@+id/empty_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </com.docker.common.common.widget.empty.EmptyLayout>
    </LinearLayout>

         

