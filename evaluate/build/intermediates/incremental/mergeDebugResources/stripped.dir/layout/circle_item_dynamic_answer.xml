    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:tag="layout/circle_item_dynamic_answer_0"                 
        android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingTop="12dp"
            android:paddingRight="14dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:tag="binding_1"               
                        android:textColor="#121212"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="还没有人回答哦！"
                        android:textSize="11sp"
                        android:tag="binding_2"                          />

                </LinearLayout>


                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:tag="binding_3"                     
                                                                     
                                                                   
                                                                           />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="binding_4"                         >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/round_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:tag="binding_5"                         
                                                                       
                                                                    
                                                                        />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_username"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_user_icon"
                    android:tag="binding_6"                      
                    android:textColor="#979797"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:scaleType="centerCrop"-->
            <!--app:errorImg="@{R.mipmap.circle_icon_empty}"-->
            <!--app:placeHolder="@{R.mipmap.circle_icon_empty}"-->
            <!--app:roundImgUrl="@{Constant.getCompleteImageUrl(item.avatar)}"-->
            <!--app:visibleGone="@{item.extData.resource.size() != 0}" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:tag="binding_7"                         >

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:tag="binding_8"                  
                    android:textColor="#333" />


                <!--<ImageView-->
                <!--android:layout_width="85dp"-->
                <!--android:layout_height="65dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:background="@color/colorPrimary"-->
                <!--app:visibleGone="@{item.imglist.size()==1}" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:tag="binding_9"                         >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:tag="binding_10"            
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="条回复"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#fff4f5f6" />
    </LinearLayout>
         