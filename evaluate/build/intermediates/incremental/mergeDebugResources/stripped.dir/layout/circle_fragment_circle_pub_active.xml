<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                 
                                                   

    

                                                            
           

    <com.docker.common.common.widget.refresh.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true" android:tag="layout/circle_fragment_circle_pub_active_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools" xmlns:tools="http://schemas.android.com/tools">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="14dp">

                    <EditText
                        android:id="@+id/pro_event_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请在此输入要发表的内容"
                        android:maxLength="500"
                        android:textSize="14sp" />

                </RelativeLayout>

                <!--<GridView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="180dp">-->

                <!--</GridView>-->


                <FrameLayout
                    android:id="@+id/souce_up_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />

                <CheckBox
                    android:id="@+id/check_is_relay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:checked="false"
                    android:paddingLeft="10dp"
                    android:text="同步转发到我的圈子"
                    android:textColor="#666"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="发布到指定的圈子"
                    android:textColor="#666" />

                <LinearLayout
                    android:id="@+id/circle_select"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布到"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_circle_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择圈子"
                        android:maxWidth="200dp"
                        android:maxLines="1"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/perssion_select"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="谁可以看"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_perssion_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/arrow_right"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="全部"
                        android:maxWidth="200dp"
                        android:maxLines="1"
                        android:textColor="#666" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.docker.common.common.widget.refresh.SmartRefreshLayout>

         