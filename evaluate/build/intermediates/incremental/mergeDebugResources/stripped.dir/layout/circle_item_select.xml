<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                       
                                                     

                                           

           


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/open_liner_bg_shape"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingRight="10dp"
        android:paddingBottom="14dp" android:tag="layout/circle_item_select_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:tag="binding_1"        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_circle_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:tag="binding_2"          
                android:textColor="@color/text_black_121212"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:tag="binding_3"           
                android:textColor="#666"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:tag="binding_4"                                                               />

    </LinearLayout>
         