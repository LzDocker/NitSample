    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/circle_fragment_detail_h5_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.docker.common.common.widget.empty.EmptyLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_foot_coutainer">

            <com.docker.common.common.widget.refresh.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:srlEnableRefresh="false"
                app:srlFooterTranslationViewId="@+id/pro_frame_comment">

                <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/net_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/pro_ll_head"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_safe_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="vertical"
                                android:paddingTop="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:tag="binding_1"             
                                    android:textColor="#121212"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_username"
                                    android:layout_marginTop="7dp"
                                    android:layout_toRightOf="@+id/iv_user_icon"
                                    android:tag="binding_2"                                  
                                    android:textColor="#979797" />

                            </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/rl_dynamic_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="45dp"
                                android:background="@drawable/open_liner_bg_shape"
                                android:paddingLeft="14dp"
                                android:paddingTop="10dp"
                                android:paddingRight="14dp"
                                android:paddingBottom="10dp">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_user_icon"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center_vertical"
                                    android:tag="binding_3"                                          
                                    android:scaleType="centerCrop"
                                                                                    
                                                                                       
                                                                                                   />

                                <TextView
                                    android:id="@+id/tv_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:layout_toRightOf="@+id/iv_user_icon"
                                    android:tag="binding_4"                                          
                                                                   
                                    android:textColor="#121212"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_pub_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_username"
                                    android:layout_marginLeft="14dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_toRightOf="@+id/iv_user_icon"
                                    android:tag="binding_5"                                  
                                    android:textColor="#979797"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tv_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_username"
                                    android:layout_marginTop="7dp"
                                    android:layout_toRightOf="@+id/tv_pub_time"
                                    android:text="发布"
                                    android:textColor="#979797"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tv_cityname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_username"
                                    android:layout_marginTop="7dp"
                                    android:layout_toRightOf="@+id/tv_city"
                                    android:tag="binding_6"        
                                    android:textColor="#979797"
                                    android:textSize="11sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/tv_attention"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@color/circle_red"
                                        android:tag="binding_7"                                    
                                        android:paddingLeft="14dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="14dp"
                                        android:paddingBottom="5dp"
                                        android:text="关注"
                                        android:textColor="@color/white"
                                                                              />

                                    <TextView
                                        android:id="@+id/tv_attentioned"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_lable_shape_gray"
                                        android:tag="binding_8"                                    
                                        android:paddingLeft="14dp"
                                        android:paddingTop="5dp"
                                        android:paddingRight="14dp"
                                        android:paddingBottom="5dp"
                                        android:text="已关注"
                                                                              />
                                </LinearLayout>
                            </RelativeLayout>

                            <!--注意：这里的webview 高度必须写为 wrap -->


                            <com.tencent.smtt.sdk.WebView
                                android:id="@+id/pro_webview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="280dp"
                                android:overScrollMode="always"
                                tools:ignore="WebViewLayout" />


                            <LinearLayout
                                android:id="@+id/ll_source_coutainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="14dp"
                                android:paddingRight="14dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="1dp"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:tag="binding_9"                       
                                        android:textColor="#E4CC51"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="center_vertical"
                                        android:tag="binding_10"                      
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lin_from_circle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:padding="10dp"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="5"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_from_circle"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:tag="binding_11"                                                    
                                            android:textColor="#000" />

                                        <TextView
                                            android:id="@+id/tv_penson"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:tag="binding_12"                                               
                                            android:textColor="#979797" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:src="@mipmap/arrow_right" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/open_liner_bg_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:tag="sticky"
                            android:text="相关推荐"
                            android:textColor="#333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <FrameLayout
                            android:id="@+id/pro_frame_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/pro_frame_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        </FrameLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </com.docker.common.common.widget.refresh.SmartRefreshLayout>

            <FrameLayout
                android:id="@+id/circle_goods_header_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_bag"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:alpha="0"
                    android:background="@color/white"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:paddingRight="14dp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:alpha=".4"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="详情"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/circle_jubao"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:tag="binding_13"                                      
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:alpha=".4"
                                android:background="@drawable/circle_ov_shape_back"
                                android:padding="20dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/circle_icon_jb" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:alpha=".4"
                            android:background="@drawable/circle_ov_shape_back"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/circle_icon_sjsb_zf" />


                        <LinearLayout
                            android:id="@+id/circle_iv_edit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="8dp"
                            android:alpha=".4"
                            android:background="@drawable/circle_ov_shape_back"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_centerVertical="true"
                                android:padding="8dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/open_meun" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

        </com.docker.common.common.widget.empty.EmptyLayout>


        <LinearLayout
            android:id="@+id/ll_foot_coutainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/open_top_liner_shape"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/circle_common_bar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:tag="binding_14"                                     
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_dz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_15"                                                              />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:tag="binding_16"                                      
                        android:textColor="#333" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/circle_pinglun_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:tag="binding_17"                                     
                    android:text="评论"
                    android:textColor="#333" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:tag="binding_18"                                        
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tag="binding_19"                                                                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:tag="binding_20"                                                  
                        android:textColor="#333" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cirlce_goods_foot"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <!-- android:visibility="gone"-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight=".15"
                    android:gravity="center"
                    android:tag="binding_21"                                          
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_dz_wj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:tag="binding_22"                                                      />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_23"                                        
                        android:textColor="#666"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight=".15"
                    android:gravity="center"
                    android:tag="binding_24"                                     
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:src="@mipmap/circle_wj_ly" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="留言"
                        android:textColor="#666"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight=".15"
                    android:gravity="center"
                    android:tag="binding_25"                                        
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:tag="binding_26"                                                                />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_27"                                                  
                        android:textColor="#666"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".55"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_shape_gray_14"
                        android:tag="binding_28"                                       
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="聊一聊"
                        android:textColor="#000" />

                    <Space
                        android:id="@+id/circle_space"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/circle_tv_want"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_shape_red_14"
                        android:tag="binding_29"                                      
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="我想要"
                        android:textColor="#fff"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

         