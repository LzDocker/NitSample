<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="50dp">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/circle_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxz"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发布闲置"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_goods_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbsp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发布商品"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_pro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxm"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发布项目"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbdt"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="发布动态"
            android:textColor="#333"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_gradle_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/circle_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxzwp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="闲置物品"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_hourse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxzzf"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="闲置住房"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxzcl"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="闲置车辆"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/circle_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fbxzsj"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="闲置时间"
            android:textColor="#333"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_close"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="120dp"
            android:paddingRight="120dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:src="@mipmap/fbback"
                android:visibility="gone" />

            <View
                android:id="@+id/view_divier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:src="@mipmap/fbclose" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>