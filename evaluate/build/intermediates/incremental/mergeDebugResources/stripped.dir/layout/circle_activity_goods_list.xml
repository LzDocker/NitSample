<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                      
                                                   

    

                 
                            
                                                               

                 
                       
                                                        

                                           

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/circle_activity_goods_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tl="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/open_liner_bg_shape"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <LinearLayout
                android:id="@+id/lin_back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/back_gray" />
            </LinearLayout>


            <EditText
                android:id="@+id/edit_query"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/open_gry_bg_shape"
                android:drawableLeft="@mipmap/serch_icon_nor"
                android:drawablePadding="5dp"
                android:hint="搜索宝贝"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/open_liner_bg_shape"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/circle_space">

                <TextView
                    android:id="@+id/circle_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@mipmap/circle_ssjg_xl"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="商品类型"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/circle_tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/circle_ssjg_xl"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="综合排序"
                    android:textColor="#000"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/circle_tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/circle_tv_type"
                    android:layout_alignLeft="@+id/circle_tv_type"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:drawableRight="@mipmap/circle_ssjg_xl"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical|right"
                    android:text="区域"
                    android:textColor="#000" />

            </RelativeLayout>


            <View
                android:id="@+id/circle_space"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="14dp"
                android:layout_toLeftOf="@+id/circle_tv_select"
                android:background="#E7E7E7" />

            <TextView
                android:id="@+id/circle_tv_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/circle_ssjg_sx"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|right"
                android:text="筛选"
                android:textColor="#000" />

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/goods_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


         