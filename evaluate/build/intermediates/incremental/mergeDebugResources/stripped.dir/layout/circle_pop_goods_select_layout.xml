<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

           


    <LinearLayout
        android:id="@+id/ll_pop_coutainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" android:tag="layout/circle_pop_goods_select_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:id="@+id/card_coutainer"
            app:cardCornerRadius="0dp"
            app:cardElevation="80dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white">
                </android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:text="重置"
                        android:id="@+id/circle_tv_reset"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:id="@+id/circle_tv_sure"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


         

