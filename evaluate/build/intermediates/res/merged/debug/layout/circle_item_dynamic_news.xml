        android:paddingTop="12dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="35dp"
                android:tag="binding_1"                                          
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                                                                
                                                                   
                                                                               />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_2"                                          
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/iv_user_icon"
                                               
                android:textColor="#121212"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/iv_user_icon"
                android:tag="binding_3"                                  
                android:textColor="#979797"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_pub_time"
                android:tag="binding_4"          
                android:textColor="#979797"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
