<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                       
                                                     

                                                       

                                           

                                                       
           

    <RelativeLayout
        android:id="@+id/rl_coutainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/open_liner_bg_shape"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="14dp" android:tag="layout/circle_item_circle_frame_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:tag="binding_1"                     
            app:layout_collapseMode="parallax"
                                                                          
                                                            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/iv_news"
            android:tag="binding_2"          
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_news"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:tag="binding_3"     
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_news"
            android:background="@drawable/circle_lable_shape"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:tag="binding_4"        
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_lable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_lable1"
            android:background="@drawable/circle_lable_shape"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:tag="binding_5"         
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="#FFC600"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="加入"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:tag="binding_6"                       />
    </RelativeLayout>
         