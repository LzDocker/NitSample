    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="4dp"
        android:tag="layout/circle_item_dynamic_hourse_0"                 
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="7dp">

            <FrameLayout
                android:id="@+id/circle_iv_header"
                android:layout_width="match_parent"
                android:layout_height="172dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:tag="binding_1"                     
                                                                   
                                                                           />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:background="#E60012"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:tag="binding_2"                 
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                                                                   />

            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_title_coutainer"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/circle_iv_header"
                android:layout_marginTop="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/circle_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/circle_iv_header"
                    android:layout_toRightOf="@+id/tv_label"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="#333"
                    android:textSize="14sp"
                                            android:tag="binding_3"/>

                <TextView
                    android:id="@+id/circle_tv_house_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:tag="binding_4"                      
                    android:textColor="#999"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_title_coutainer"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/open_liner_bg_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Â¥"
                    android:textColor="#E84651"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/circle_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_5"                             
                    android:textColor="#E84651"
                    android:textSize="16sp" />

            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_iv_avater"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/ll_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:tag="binding_6"                                          
                                                                
                                                                   
                                                                               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/ll_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/circle_iv_avater"
                android:gravity="center_vertical"
                android:tag="binding_7"                                          
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_8"        
                    android:textColor="#333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_9"                     
                    android:textColor="#999"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

         