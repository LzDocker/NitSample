<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.docker.apps.active.vo.ActiveManagerVo" />

        <variable
            name="parent"
            type="com.docker.apps.active.vo.card.ActiveManagerCard" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/open_liner_rb_bg_shape"
        android:gravity="center"
        android:onClick="@{(view)->parent.onChilcItemClick(item,view)}"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@{item.icon}" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:text="@{item.title}" />

    </LinearLayout>

</layout>