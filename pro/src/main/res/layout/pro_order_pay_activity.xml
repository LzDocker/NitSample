<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>


    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/circle_red"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_totalmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/circle_red"
                        android:textSize="18sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择支付方式"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <RelativeLayout
                    android:id="@+id/rl_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_icon_zfb"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/zfb" />

                    <TextView
                        android:id="@+id/tv_zhifub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_icon_zfb"
                        android:text="支付宝"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_zhifub"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/iv_icon_zfb"
                        android:text="推荐有支付宝账号的用户使用"
                        android:textSize="10sp" />


                    <CheckBox
                        android:id="@+id/checkbox_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/checkstate"
                        android:button="@null"
                        android:checked="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_wx"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/open_liner_bg_shape"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/checkbox_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/checkstate"
                        android:button="@null" />

                    <ImageView
                        android:id="@+id/iv_icon_wx"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/wx" />

                    <TextView
                        android:id="@+id/tv_wx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_icon_wx"
                        android:text="微信支付"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_wx"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/iv_icon_wx"
                        android:text="推荐安装微信5.0及以上版本的用户使用"
                        android:textSize="10sp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/orderpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/common_radius20_ovl"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingTop="14dp"
            android:paddingRight="24dp"
            android:paddingBottom="14dp"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</layout>


