<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.docker.cirlev2.vo.entity.ServiceDataBean.ResourceBean" />

        <!--<variable-->
        <!--name="viewmodel"-->
        <!--type="com.docker.cirlev2.vm.CircleDynamicListViewModel" />-->

        <import type="com.docker.common.common.binding.CommonBdUtils" />

        <variable
            name="serverdata"
            type="com.docker.cirlev2.vo.entity.ServiceDataBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <!--        android:onClick="@{(view)->viewmodel.imgclick(item,view,BdUtils.getResourceImgUrl(item))}"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@color/blue" />


            <!--        app:roundImgUrl="@{CommonBdUtils.getResourceImgUrl(item)}"-->
            <!--          app:errorImg="@{R.mipmap.circle_icon_empty}"
                app:placeHolder="@{R.mipmap.circle_icon_empty}"-->

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/circle_player_icon"
                app:visibleGone="@{item.t==2}" />
        </FrameLayout>

    </LinearLayout>

</layout>