<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@color/bar_grey"
                android:padding="5dp"
                android:singleLine="true"
                android:text="111111111111111"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@mipmap/open_all_xuan_icon" />

        </LinearLayout>


        <Button
            android:id="@+id/my_location"
            android:layout_width="@dimen/friend_map_btn_height"
            android:layout_height="@dimen/friend_map_btn_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="12dip"
            android:background="@drawable/btn_location_selector" />

    </FrameLayout>


</layout>