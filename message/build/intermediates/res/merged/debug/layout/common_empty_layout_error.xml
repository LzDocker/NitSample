<?xml version="1.0" encoding="utf-8"?>
                                                                   

                 

    <LinearLayout
        android:id="@+id/common_err_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" android:tag="layout/common_empty_layout_error_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/common_iv_error"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_error" />

        <TextView
            android:id="@+id/common_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_bg_blue"
            android:padding="8dp"
            android:text="网络问题，请点击重试"
            android:textColor="#333"
            android:textSize="12sp" />
    </LinearLayout>

         