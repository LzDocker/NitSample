<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.docker.common.common.vo.AddressVo" />

        <variable
            name="viewmodel"
            type="com.docker.common.common.vm.CommonAddressViewModel" />

        <import type="com.docker.common.R" />

        <import type="com.docker.common.common.binding.CommonBdUtils" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_coutainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/open_liner_bg_shape"
            android:gravity="center_vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_choose_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:onClick="@{(view)->viewmodel.ItemClick(item,view)}"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_choose_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@{item.isCheck ? R.mipmap.dzgl_true :R.mipmap.dzgl_false}" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{item.name}"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_name"
                            android:text="@{item.phone}"
                            android:textColor="#FF333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_phone"
                            android:background="#FFE60012"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="默认"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:visibleGone="@{CommonBdUtils.isDefault(item.is_moren)}" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_name"
                            android:layout_marginTop="10dp"
                            android:text="@{item.address}"
                            android:textColor="#FF404040"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="编辑"
                    android:textColor="#FF404040"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f2"></View>
    </LinearLayout>


</layout>